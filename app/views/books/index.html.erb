<h1>New book</h1>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<% @book.each do |book| %>
<div>
  <%= image_tag book.get_image %>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>Title：<%= book.title %></p>
  <p>Opinion</p>：<%= book.body %></p>
  <p>name：<%= book.user.name %></p>
</div>
<% end %>